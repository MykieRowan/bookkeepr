# BookKeepr Environment Configuration
# Copy this file to .env and fill in your actual values
# WARNING: Never commit your .env file to Git!

# Hardcover API Configuration
# Get your API key from: https://hardcover.app/settings/api
HARDCOVER_API_KEY=your_hardcover_api_key_here

# Prowlarr Configuration
# If behind Gluetun VPN: http://gluetun:9696
# If direct access: http://prowlarr:9696
PROWLARR_URL=http://gluetun:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here

# qBitTorrent Configuration
# If behind Gluetun VPN: http://gluetun:8089
# If direct access: http://qbittorrent:8080
QBIT_URL=http://gluetun:8089
QBIT_USERNAME=admin
QBIT_PASSWORD=adminadmin

# Calibre Configuration
# Path to your Calibre library ingest folder
CALIBRE_INGEST_FOLDER=/mnt/Books/Calibre
